<div class="list-detail-container">
  <div class="list-header">
    <div class="list-info">
      <h1 class="list-title"><%= @list.name %></h1>
      <% if @list.description.present? %>
        <p class="list-description"><%= @list.description %></p>
      <% end %>
      <div class="list-meta">
        <span class="privacy-badge <%= @list.privacy_level %>">
          <% case @list.privacy_level %>
          <% when 'private' %>
            üîí Private
          <% when 'unlisted' %>
            üîó Unlisted
          <% when 'public' %>
            üåê Public
          <% end %>
        </span>
        <span class="movie-count"><%= @movies.count %> movies</span>
        <span class="list-created">Created <%= time_ago_in_words(@list.created_at) %> ago</span>
      </div>
    </div>
    
    <div class="list-actions">
      <%= link_to "Edit List", edit_list_path(@list), class: "btn btn--primary" %>
      <button onclick="showSharingModal()" class="btn btn--secondary">Share List</button>
      <%= link_to "Back to Lists", lists_path, class: "btn btn--ghost" %>
    </div>
  </div>

  <% if @movies.any? %>
    <div class="movies-grid" id="sortable-movies">
      <% @movies.each_with_index do |movie, index| %>
        <div class="movie-card sortable-item" data-position="<%= index + 1 %>" data-movie-id="<%= movie.id %>" data-list-movie-id="<%= movie.list_movies.find_by(list: @list).id %>">
          <% if movie.poster_path %>
            <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="movie-poster">
          <% else %>
            <div class="movie-poster-placeholder">
              <span><%= movie.title %></span>
            </div>
          <% end %>
          
          <div class="movie-info">
            <div class="movie-position">#<%= index + 1 %></div>
            <h3 class="movie-title"><%= movie.title %></h3>
            <p class="movie-year"><%= movie.release_date&.year %></p>
            <div class="movie-rating">
              <span class="rating-value"><%= movie.vote_average.round(1) %></span>
              <span class="rating-label">/10</span>
            </div>
            <div class="movie-genres">
              <% movie.genres.limit(3).each do |genre| %>
                <span class="genre-tag"><%= genre.name %></span>
              <% end %>
            </div>
            <% if movie.overview.present? %>
              <p class="movie-overview"><%= truncate(movie.overview, length: 120) %></p>
            <% end %>
          </div>
          
          <div class="movie-actions">
            <button class="btn btn--danger btn--small remove-movie" 
                    data-movie-id="<%= movie.id %>"
                    data-list-id="<%= @list.id %>">
              Remove
            </button>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-list">
      <h3>This list is empty</h3>
      <p>Add movies to this list to get started!</p>
      <%= link_to "Browse Movies", root_path, class: "btn btn--primary" %>
    </div>
  <% end %>
</div>

<style>
.list-detail-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 3rem;
  flex-wrap: wrap;
  gap: 2rem;
}

.list-info {
