  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 500;
}

.privacy-badge.private {
  background: #fee2e2;
  color: #dc2626;
}

.privacy-badge.unlisted {
  background: #fef3c7;
  color: #d97706;
}

