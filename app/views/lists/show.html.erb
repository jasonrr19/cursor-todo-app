  color: #059669;
}

.movie-count,
.list-created {
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.list-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.movies-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

.movie-card {
  background: var(--card-background);
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
