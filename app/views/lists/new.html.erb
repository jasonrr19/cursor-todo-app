<div class="list-form-container">
  <div class="list-form-header">
    <h1>Create New List</h1>
    <p class="form-subtitle">Organize your favorite movies into a custom list</p>
  </div>

  <%= form_with model: @list, local: true, class: "list-form" do |form| %>
    <% if @list.errors.any? %>
      <div class="form-errors">
        <h4><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h4>
        <ul>
          <% @list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "List Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-input", placeholder: "e.g., My Favorite Action Movies" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description (Optional)", class: "form-label" %>
      <%= form.text_area :description, class: "form-textarea", 
                         placeholder: "Describe what this list is about...", 
                         rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :privacy_level, "Privacy Level", class: "form-label" %>
      <div class="privacy-options">
        <label class="privacy-option">
          <%= form.radio_button :privacy_level, 'private' %>
          <div class="privacy-content">
            <span class="privacy-icon">üîí</span>
            <div>
              <strong>Private</strong>
              <p>Only you can see this list</p>
            </div>
          </div>
        </label>

        <label class="privacy-option">
          <%= form.radio_button :privacy_level, 'unlisted' %>
          <div class="privacy-content">
            <span class="privacy-icon">üîó</span>
            <div>
              <strong>Unlisted</strong>
              <p>Only people with the link can see this list</p>
            </div>
          </div>
        </label>

        <label class="privacy-option">
          <%= form.radio_button :privacy_level, 'public' %>
          <div class="privacy-content">
            <span class="privacy-icon">üåê</span>
            <div>
              <strong>Public</strong>
              <p>Anyone can discover and view this list</p>
            </div>
          </div>
        </label>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit "Create List", class: "btn btn--primary btn--large" %>
      <%= link_to "Cancel", lists_path, class: "btn btn--ghost btn--large" %>
    </div>
  <% end %>
</div>

<style>
.list-form-container {
  max-width: 600px;
  margin: 0 auto;
  padding: 2rem;
}

.list-form-header {
  text-align: center;
  margin-bottom: 3rem;
}

.list-form-header h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.form-subtitle {
  color: var(--text-secondary);
  font-size: 1.1rem;
}

.list-form {
  background: var(--card-background);
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.form-errors {
  background: #fee2e2;
  border: 1px solid #fecaca;
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 2rem;
  color: #dc2626;
}

.form-errors h4 {
  margin: 0 0 0.5rem 0;
  font-size: 1rem;
}

.form-errors ul {
  margin: 0;
  padding-left: 1.5rem;
}

.form-group {
  margin-bottom: 2rem;
}

.form-label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 1rem;
  background: var(--background-secondary);
  color: var(--text-primary);
  transition: border-color 0.2s ease;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.1);
}

.privacy-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.privacy-option {
  display: block;
  cursor: pointer;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  padding: 1rem;
  transition: all 0.2s ease;
}

.privacy-option:hover {
  border-color: var(--accent-primary);
  background: rgba(0, 255, 255, 0.05);
}

.privacy-option input[type="radio"] {
  display: none;
}

.privacy-option input[type="radio"]:checked + .privacy-content {
  color: var(--accent-primary);
}

.privacy-option input[type="radio"]:checked {
  border-color: var(--accent-primary);
  background: rgba(0, 255, 255, 0.1);
}

.privacy-content {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.privacy-icon {
  font-size: 1.5rem;
}

.privacy-content strong {
  display: block;
  margin-bottom: 0.25rem;
}

.privacy-content p {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 2rem;
}

.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: var(--accent-primary);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 500;
  transition: background-color 0.2s ease;
  border: none;
  cursor: pointer;
}

.btn:hover {
  background: var(--accent-secondary);
}

.btn--primary {
  background: var(--accent-primary);
}

.btn--primary:hover {
  background: var(--accent-secondary);
}

.btn--ghost {
  background: transparent;
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn--ghost:hover {
  background: var(--background-secondary);
}

.btn--large {
  padding: 1rem 2rem;
  font-size: 1.1rem;
}

[data-theme="dark"] {
  --bg-color: #1a1a1a;
  --text-color: #ffffff;
  --card-bg: #2d2d2d;
  --border-color: #444;
  --accent-color: #00ffff;
  --accent-primary: #00ffff;
  --accent-secondary: #00cccc;
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --card-background: #2d2d2d;
  --background-secondary: #3a3a3a;
}

[data-theme="light"] {
  --bg-color: #f5f5f5;
  --text-color: #333;
  --card-bg: white;
  --border-color: #ddd;
  --accent-color: #00ffff;
  --accent-primary: #00ffff;
  --accent-secondary: #00cccc;
  --text-primary: #333;
  --text-secondary: #666;
  --card-background: white;
  --background-secondary: #f8f9fa;
}
</style>


