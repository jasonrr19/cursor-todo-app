    <p>Discover overlooked masterpieces and cult classics</p>
  </div>
</div>

<div class="home-search-section" data-controller="movie-search">
  <div class="search-header">
    <h2 class="search-title">WHAT ARE YOU IN THE MOOD FOR?</h2>
    <p class="search-subtitle">Search thousands of films instantly</p>
  </div>
  
  <div class="search-container">
    <form data-movie-search-target="form" data-action="submit->movie-search#search" class="search-form" method="get" action="/movies/search">
      <div class="search-input-group">
        <input 
          type="text" 
          name="q"
          data-movie-search-target="query"
          placeholder="Search for movies..." 
          class="search-input"
          required
        >
        <button type="submit" class="btn btn--primary search-btn">Search</button>
      </div>
      
      <div class="search-filters" data-movie-search-target="filters" style="display: none;">
        <select id="filter-genre" name="genre" class="filter-select">
          <option value="">All Genres</option>
        </select>
        <select id="filter-year" name="year" class="filter-select">
          <option value="">All Years</option>
        </select>
        <select id="filter-language" name="language" class="filter-select">
          <option value="">All Languages</option>
        </select>
        <select id="filter-country" name="country" class="filter-select">
          <option value="">All Countries</option>
        </select>
        
        <!-- People Search -->
        <div class="people-search-container">
          <label for="people-search-input" class="people-search-label">Search People (Directors, Actors)</label>
          <div class="people-search-input-group">
            <input 
              type="text" 
              id="people-search-input"
              placeholder="Type to search for people..." 
              class="people-search-input"
            >
            <button type="button" id="people-search-btn" class="btn btn--secondary btn--small">Search</button>
          </div>
          <div id="people-search-results" class="people-search-results" style="display: none;"></div>
          <div id="selected-people" class="selected-people"></div>
        </div>
      </div>
      
      <button type="button" data-movie-search-target="toggle" data-action="click->movie-search#toggleFilters" class="btn btn--ghost btn--small">
        Advanced Filters
      </button>
    </form>
  </div>

  
  <div data-movie-search-target="results" class="search-results" style="display: none;">
    <h2>Search Results</h2>
    <div data-movie-search-target="container" class="results-grid"></div>
  </div>
</div>

<% unless logged_in? %>
  <div class="home-cta-section">
    <div class="cta-container">
      <div class="cta-content-new">
        <h2 class="cta-heading">START BUILDING YOUR PERSONAL COLLECTION</h2>
        <p class="cta-text-new">Join a community of discerning film enthusiasts. Get algorithm-powered recommendations. Track what matters.</p>
        <%= link_to signup_path, class: "cta-button-new" do %>
          <span class="button-text">CREATE ACCOUNT</span>
          <span class="button-arrow">→</span>
        <% end %>
        <p class="cta-fine-print">Free forever • No credit card • 2-minute setup</p>
      </div>
    </div>
  </div>
<% end %>
