<div class="recommendations-container">
  <div class="recommendations-header">
    <h1>Your Recommendations</h1>
    <p class="recommendations-subtitle">Movies tailored to your preferences</p>
  </div>

  <% if @fallback_mode && @user&.user_preference %>
    <% 
      genres = Genre.where(tmdb_id: @user.user_preference.preferred_genre_ids).pluck(:name)
      languages = OriginalLanguage.where(iso_639_1: @user.user_preference.preferred_language_codes).pluck(:name)
      countries = ProductionCountry.where(iso_3166_1: @user.user_preference.preferred_country_codes).pluck(:name)
    %>
    <div class="fallback-notice">
      <span class="fallback-icon">‚ÑπÔ∏è</span>
      <div class="fallback-content">
        <strong>Good news!</strong> While we don't have <%= languages.join(', ') %> films from <%= countries.join(', ') %> right now, we've found some popular <strong><%= genres.join(', ') %></strong> films that might interest you!
      </div>
    </div>
  <% end %>

  <% if @recommendations.any? %>
    <div class="recommendations-grid">
      <% @recommendations.each do |movie| %>
        <div class="movie-card">
          <% if movie.poster_path %>
            <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="movie-poster">
          <% else %>
            <div class="movie-poster-placeholder" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); display: flex; align-items: center; justify-content: center; padding: 1rem; text-align: center;">
              <div style="color: #fff; font-weight: 600; font-size: 1.1rem;"><%= movie.title %></div>
            </div>
          <% end %>
          
          <div class="movie-info">
            <h3 class="movie-title"><%= movie.title %></h3>
            <p class="movie-year"><%= movie.release_date&.year %></p>
            <div class="movie-rating">
              <span class="rating-value"><%= movie.vote_average.round(1) %></span>
              <span class="rating-label">/10</span>
            </div>
            <div class="movie-genres">
              <% movie.genres.limit(3).each do |genre| %>
                <span class="genre-tag"><%= genre.name %></span>
              <% end %>
            </div>
            <% if movie.overview.present? %>
              <p class="movie-overview"><%= truncate(movie.overview, length: 120) %></p>
            <% end %>
            
            <div class="movie-actions">
              <%= link_to movie_path(movie), class: "btn btn--primary btn--tiny", style: "flex: 1;" do %>
                üëÅÔ∏è View Details
              <% end %>
              <button class="btn btn--add-list btn--tiny" 
                      data-movie-id="<%= movie.id %>"
                      onclick="showListPicker(<%= movie.id %>)"
                      style="flex: 1;">
                ‚ûï Add
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Serendipity Section -->
    <% if @serendipity_suggestions.any? %>
      <div class="serendipity-section">
        <div class="serendipity-header">
          <h2>üé¨ Hidden Gems</h2>
          <p class="serendipity-subtitle">Discover lesser-known films that might surprise you</p>
        </div>
        
        <div class="serendipity-grid">
          <% @serendipity_suggestions.each do |movie| %>
            <div class="movie-card serendipity-card">
              <% if movie.poster_path %>
                <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" class="movie-poster">
              <% else %>
                <div class="movie-poster-placeholder" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); display: flex; align-items: center; justify-content: center; padding: 1rem; text-align: center;">
                  <div style="color: #fff; font-weight: 600; font-size: 1.1rem;"><%= movie.title %></div>
                </div>
              <% end %>
              
              <div class="movie-info">
                <h3 class="movie-title"><%= movie.title %></h3>
                <p class="movie-year"><%= movie.release_date&.year %></p>
                <div class="movie-rating">
                  <span class="rating-value"><%= movie.vote_average.round(1) %></span>
                  <span class="rating-label">/10</span>
                  <span class="vote-count">(<%= movie.vote_count %> votes)</span>
                </div>
                <div class="movie-genres">
                  <% movie.genres.limit(3).each do |genre| %>
                    <span class="genre-tag"><%= genre.name %></span>
                  <% end %>
                </div>
                <% if movie.overview.present? %>
                  <p class="movie-overview"><%= truncate(movie.overview, length: 100) %></p>
                <% end %>
                
                <div class="movie-actions">
                  <%= link_to movie_path(movie), class: "btn btn--primary btn--tiny", style: "flex: 1;" do %>
                    üëÅÔ∏è View Details
                  <% end %>
                  <button class="btn btn--add-list btn--tiny" 
                          data-movie-id="<%= movie.id %>"
                          onclick="showListPicker(<%= movie.id %>)"
                          style="flex: 1;">
                    ‚ûï Add
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="serendipity-actions">
          <div class="serendipity-cta">
            <h3>üé≤ Feeling Adventurous?</h3>
            <p>Discover even more hidden gems</p>
            <div class="serendipity-buttons">
              <a href="/recommendations/serendipity?mode=low" class="btn btn--serendipity">
                <span class="serendipity-icon">üéØ</span>
                <span class="serendipity-label">Low-Vote Films</span>
                <span class="serendipity-desc">Underrated treasures</span>
              </a>
              <a href="/recommendations/serendipity?mode=obscure" class="btn btn--serendipity">
                <span class="serendipity-icon">üíé</span>
                <span class="serendipity-label">Obscure Films</span>
                <span class="serendipity-desc">Rare discoveries</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <% if @user&.user_preference %>
      <% 
        genres = Genre.where(tmdb_id: @user.user_preference.preferred_genre_ids).pluck(:name)
        countries = ProductionCountry.where(iso_3166_1: @user.user_preference.preferred_country_codes).pluck(:name)
      %>
      <%= render 'shared/empty_state',
          icon: 'üåç',
          title: 'No exact matches found',
          message: "We couldn't find movies that match all your preferences (#{genres.join(', ')} from #{countries.join(', ')}). Try browsing our full catalog or adjusting your preferences to discover more films!",
          action_text: 'Browse All Movies',
          action_path: root_path %>
      <div style="text-align: center; margin-top: 1rem;">
        <%= link_to 'Adjust Preferences', onboarding_path, class: 'btn btn--secondary' %>
      </div>
    <% else %>
      <%= render 'shared/empty_state',
          icon: 'üé¨',
          title: 'No recommendations yet',
          message: 'Complete your onboarding to get personalized movie recommendations!',
          action_text: 'Set Up Preferences',
          action_path: onboarding_path %>
    <% end %>
  <% end %>
</div>

<style>
