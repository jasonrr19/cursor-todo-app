  border: 2px solid var(--accent-primary);
  position: relative;
}

.serendipity-card::before {
  content: "‚ú®";
  position: absolute;
  top: -10px;
  right: -10px;
  background: var(--accent-primary);
  color: white;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  z-index: 1;
}

.vote-count {
  color: var(--text-secondary);
  font-size: 0.85rem;
  margin-left: 0.5rem;
}

