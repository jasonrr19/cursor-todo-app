}

.explore-content p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
}

.btn--explore {
  background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
  padding: 1rem 2.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  border: none;
  box-shadow: 0 4px 15px rgba(0, 255, 255, 0.3);
