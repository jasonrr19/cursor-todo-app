}

.btn--explore:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 255, 255, 0.5);
}

/* Enhanced Add to List Button */
.btn--add-list {
  background: linear-gradient(135deg, #00d4ff 0%, #00a8ff 100%);
  color: white;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: none;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn--add-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.btn--add-list:hover::before {
  left: 100%;
}

.btn--add-list:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(0, 212, 255, 0.5);
  background: linear-gradient(135deg, #00a8ff 0%, #0088ff 100%);
}

.btn-icon {
  font-size: 1.2rem;
  display: inline-block;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

.btn-text {
  display: inline-block;
}

/* Serendipity CTA Section */
.serendipity-cta {
  background: linear-gradient(135deg, rgba(255, 0, 255, 0.05) 0%, rgba(138, 43, 226, 0.05) 100%);
  border: 3px solid #8a2be2;
  border-radius: 20px;
  padding: 3rem 2rem;
  text-align: center;
  box-shadow: 0 10px 30px rgba(138, 43, 226, 0.2);
  animation: serendipity-pulse 4s ease-in-out infinite;
}

@keyframes serendipity-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 10px 30px rgba(138, 43, 226, 0.2);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 15px 40px rgba(138, 43, 226, 0.4);
  }
}

.serendipity-cta h3 {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
  animation: rainbow-text 3s linear infinite;
}

@keyframes rainbow-text {
  0% { color: #ff00ff; }
  25% { color: #8a2be2; }
  50% { color: #00ffff; }
  75% { color: #8a2be2; }
  100% { color: #ff00ff; }
}

.serendipity-cta > p {
  color: var(--text-secondary);
  font-size: 1.2rem;
  margin-bottom: 2rem;
}

.serendipity-buttons {
  display: flex;
  gap: 2rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn--serendipity {
  background: linear-gradient(135deg, #8a2be2 0%, #9932cc 100%);
  color: white;
  padding: 1.5rem 2rem;
  border: none;
  border-radius: 16px;
  min-width: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  box-shadow: 0 8px 20px rgba(138, 43, 226, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn--serendipity::before {
  content: '‚ú®';
  position: absolute;
  top: -20px;
  right: -20px;
  font-size: 3rem;
  opacity: 0.1;
  animation: sparkle 3s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% {
    transform: rotate(0deg) scale(1);
    opacity: 0.1;
  }
  50% {
    transform: rotate(180deg) scale(1.5);
