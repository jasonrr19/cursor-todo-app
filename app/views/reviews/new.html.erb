<div class="review-form-container">
  <div class="review-form-header">
    <h1>Write a Review</h1>
    <p class="form-subtitle">Share your thoughts about <strong><%= @movie.title %></strong></p>
  </div>

  <%= form_with model: [@movie, @review], local: true, class: "review-form" do |form| %>
    <% if @review.errors.any? %>
      <div class="form-errors">
        <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :rating, "Rating (1-10)", class: "form-label" %>
      <div class="rating-input">
        <% (1..10).each do |rating| %>
          <label class="rating-option">
            <%= form.radio_button :rating, rating %>
            <span class="rating-number"><%= rating %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :title, "Review Title (Optional)", class: "form-label" %>
      <%= form.text_field :title, class: "form-input", placeholder: "e.g., A Masterpiece of Cinema" %>
    </div>

    <div class="form-group">
      <%= form.label :review_text, "Your Review", class: "form-label" %>
      <%= form.text_area :review_text, class: "form-textarea", 
                         placeholder: "Share your detailed thoughts about this movie...", 
                         rows: 6, required: true %>
    </div>

    <div class="form-group">
      <label class="checkbox-label">
        <%= form.check_box :contains_spoilers %>
        <span class="checkbox-text">This review contains spoilers</span>
      </label>
      <p class="checkbox-help">Check this if your review reveals important plot details</p>
    </div>

    <div class="form-actions">
      <%= form.submit "Submit Review", class: "btn btn--primary btn--large" %>
      <%= link_to "Cancel", :back, class: "btn btn--ghost btn--large" %>
    </div>
  <% end %>
</div>

<style>
.review-form-container {
  max-width: 600px;
  margin: 0 auto;
  padding: 2rem;
}

.review-form-header {
  text-align: center;
  margin-bottom: 3rem;
}

.review-form-header h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.form-subtitle {
  color: var(--text-secondary);
  font-size: 1.1rem;
}

.review-form {
  background: var(--card-background);
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.form-errors {
  background: #fee2e2;
  border: 1px solid #fecaca;
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 2rem;
  color: #dc2626;
}

.form-errors h4 {
  margin: 0 0 0.5rem 0;
  font-size: 1rem;
}

.form-errors ul {
  margin: 0;
  padding-left: 1.5rem;
}

.form-group {
  margin-bottom: 2rem;
}

.form-label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
}

.rating-input {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 1rem;
}

.rating-option {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 3rem;
  height: 3rem;
  border: 2px solid var(--border-color);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
}

.rating-option input[type="radio"] {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
  margin: 0;
  cursor: pointer;
}

.rating-number {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 1.1rem;
}

.rating-option:hover {
  border-color: var(--accent-primary);
  background: rgba(0, 255, 255, 0.1);
}

.rating-option:has(input[type="radio"]:checked) {
  background: var(--accent-primary);
  border-color: var(--accent-primary);
  transform: scale(1.1);
  box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
}

.rating-option:has(input[type="radio"]:checked) .rating-number {
  color: white;
  font-weight: 700;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 1rem;
  background: var(--background-secondary);
  color: var(--text-primary);
  transition: border-color 0.2s ease;
  font-family: inherit;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.1);
}

.checkbox-label {
  display: flex;
  align-items: center;
  cursor: pointer;
  margin-bottom: 0.5rem;
}

.checkbox-label input[type="checkbox"] {
  margin-right: 0.75rem;
  width: 1.2rem;
  height: 1.2rem;
  accent-color: var(--accent-primary);
}

.checkbox-text {
  font-weight: 500;
  color: var(--text-primary);
}

.checkbox-help {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin-left: 2rem;
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 2rem;
}

.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: var(--accent-primary);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 500;
  transition: background-color 0.2s ease;
  border: none;
  cursor: pointer;
}

.btn:hover {
  background: var(--accent-secondary);
}

.btn--primary {
  background: var(--accent-primary);
}

.btn--primary:hover {
  background: var(--accent-secondary);
}

.btn--ghost {
  background: transparent;
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn--ghost:hover {
  background: var(--background-secondary);
}

.btn--large {
  padding: 1rem 2rem;
  font-size: 1.1rem;
}

[data-theme="dark"] {
  --bg-color: #1a1a1a;
  --text-color: #ffffff;
  --card-bg: #2d2d2d;
  --border-color: #444;
  --accent-color: #00ffff;
  --accent-primary: #00ffff;
  --accent-secondary: #00cccc;
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --card-background: #2d2d2d;
  --background-secondary: #3a3a3a;
}

[data-theme="light"] {
  --bg-color: #f5f5f5;
  --text-color: #333;
  --card-bg: white;
  --border-color: #ddd;
  --accent-color: #00ffff;
  --accent-primary: #00ffff;
  --accent-secondary: #00cccc;
  --text-primary: #333;
  --text-secondary: #666;
  --card-background: white;
  --background-secondary: #f8f9fa;
}
</style>


