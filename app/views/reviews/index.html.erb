<div class="reviews-container">
  <div class="reviews-header">
    <h1>My Reviews</h1>
    <p class="reviews-subtitle">Your movie reviews and ratings</p>
  </div>

  <% if @reviews.any? %>
    <div class="reviews-grid">
      <% @reviews.each do |review| %>
        <div class="review-card">
          <div class="review-movie">
            <% if review.movie.poster_path %>
              <img src="<%= review.movie.poster_url %>" alt="<%= review.movie.title %>" class="movie-poster">
            <% else %>
              <div class="movie-poster-placeholder">
                <span><%= review.movie.title %></span>
              </div>
            <% end %>
            
            <div class="movie-info">
              <h3 class="movie-title"><%= review.movie.title %></h3>
              <p class="movie-year"><%= review.movie.release_date&.year %></p>
            </div>
          </div>

          <div class="review-content">
            <div class="review-header">
              <div class="review-rating">
                <span class="rating-value"><%= review.rating %></span>
                <span class="rating-label">/10</span>
              </div>
              <div class="review-meta">
                <span class="review-date">
                  <%= review.created_at.strftime("%B %d, %Y") %>
                  <% if review.updated_at > review.created_at %>
                    <span class="edited-badge">‚úèÔ∏è Edited</span>
                  <% end %>
                </span>
                <% if review.title.present? %>
                  <h4 class="review-title"><%= review.title %></h4>
                <% end %>
              </div>
            </div>

            <div class="review-text">
              <% if review.contains_spoilers %>
                <div class="spoiler-warning">
                  <span class="spoiler-icon">‚ö†Ô∏è</span>
                  <span class="spoiler-text">Contains Spoilers</span>
                </div>
                <div class="spoiler-content" data-spoiler="true">
                  <div class="spoiler-blur">
                    <p><%= truncate(review.review_text, length: 200) %></p>
                    <button class="spoiler-reveal-btn" onclick="toggleSpoiler(this)">Click to reveal spoilers</button>
                  </div>
                  <div class="spoiler-revealed" style="display: none;">
                    <p><%= simple_format(review.review_text) %></p>
                    <button class="spoiler-hide-btn" onclick="toggleSpoiler(this)">Hide spoilers</button>
                  </div>
                </div>
              <% else %>
                <p><%= simple_format(review.review_text) %></p>
              <% end %>
            </div>

            <div class="review-actions">
              <%= link_to "‚úèÔ∏è Edit Review", edit_review_path(review), class: "btn btn--primary btn--small" %>
              <%= link_to "üëÅÔ∏è View Details", movie_path(review.movie.id), class: "btn btn--ghost btn--small" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= render 'shared/empty_state',
        icon: '‚úçÔ∏è',
        title: 'No reviews yet',
        message: 'Start reviewing movies to see them here!',
        action_text: 'Browse Movies',
        action_path: root_path %>
  <% end %>
</div>

