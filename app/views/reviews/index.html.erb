</style>

<script>
function toggleSpoiler(button) {
  const spoilerContent = button.closest('.spoiler-content');
  const blurDiv = spoilerContent.querySelector('.spoiler-blur');
  const revealedDiv = spoilerContent.querySelector('.spoiler-revealed');
  
  if (blurDiv.style.display !== 'none') {
    blurDiv.style.display = 'none';
    revealedDiv.style.display = 'block';
  } else {
    blurDiv.style.display = 'block';
    revealedDiv.style.display = 'none';
  }
}
</script>


